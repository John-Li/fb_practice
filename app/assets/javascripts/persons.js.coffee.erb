$ ->
  $('a#get_person').click -> 
    $.ajax
      dataType: 'json',
      type: 'GET',
      url:  "<%= Rails.application.routes.url_helpers.get_person_path %>"
      success: (data) =>
        parse_data(data)
        
  parse_data = (data) => 
    markup = "<tr><td>$name</td></tr>"
    $.template("rowWithName", markup)
    $.tmpl("rowWithName", data).appendTo('.persons table')      